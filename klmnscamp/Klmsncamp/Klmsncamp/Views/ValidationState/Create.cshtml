@model Klmsncamp.Models.ValidationState

@{
    ViewBag.Title = "Geçerlilik Durumlar - Oluştur";
}
@section script
{
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}


<div align="center" style="width:500px; margin-left: auto; margin-right: auto; margin-top:30px;">

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
 <fieldset class="module aligned ">
<legend>Ekle</legend>
        <table style="width: 100%; margin-top: 15px;">
          <tbody>   
            <thead><th colspan="2">Geçerlilik Durumları Yeni Kayıt Ekle</th></thead>
                
                <tr>
                <td style="vertical-align: middle;">
                    @Html.LabelFor(model => model.Description)
                </td>
                <td style="vertical-align: middle;">
                    @Html.TextBoxFor(model => model.Description, new { size = 50 })
                    @Html.ValidationMessageFor(model => model.Description)
                </td>
                </tr>
           </tbody>
        </table>
   </fieldset>      
          
        <div class="submit-row" >
			<input type="submit" value="Kaydet" class="default" onclick="this.disabled=true;this.value='ekliyor..';this.form.submit();" name="_save" />
			
  		    <p class="deletelink-box"><a href="/ValidationState">Vazgeç ve geri dön</a></p>
		</div>					 		    	
  		 
    
}


</div>