@using Telerik.Web.Mvc.UI
@model Klmsncamp.Models.Inventory

@{
    ViewBag.Title = "Cihaz / Envanter Bilgisi Düzenleme";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div align="center" style="width:640px; margin-left: auto; margin-right: auto; margin-top:30px;">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
     @Html.HiddenFor(model => model.InventoryID)
       <fieldset class="module aligned ">
       <legend>Düzenle</legend>
        <table style="width: 100%; margin-top:15px;">
        <tbody>
        <thead>
        <th colspan="2">Cihaz Envanter Bilgileri Düzenleme</th>
        </thead>  
        <tr>  
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.Description)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.TextBoxFor(model => model.Description, new { size = "60" })<br />
            @Html.ValidationMessageFor(model => model.Description)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.SerialNumber)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.TextBoxFor(model => model.SerialNumber, new { size = "50" })<br />
            @Html.ValidationMessageFor(model => model.SerialNumber)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.StockBarcode)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.TextBoxFor(model => model.StockBarcode, new { size = "50" })<br />
            @Html.ValidationMessageFor(model => model.StockBarcode)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.LocationID)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.DropDownList("LocationID", String.Empty)<br />
            @Html.ValidationMessageFor(model => model.LocationID)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.CorporateAccountID,"Markası")
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.DropDownList("CorporateAccountID", String.Empty)<br />
            @Html.ValidationMessageFor(model => model.CorporateAccountID)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.BrandModel)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.TextBoxFor(model => model.BrandModel, new { size = "50" })<br />
            @Html.ValidationMessageFor(model => model.BrandModel)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.InventoryStockNo)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.TextBoxFor(model => model.InventoryStockNo, new { size = "50" })<br />
            @Html.ValidationMessageFor(model => model.InventoryStockNo)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.Notes)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.TextAreaFor(model => model.Notes, new { cols = "50", rows = "3" })<br />
            @Html.ValidationMessageFor(model => model.Notes)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.InventoryOwnershipID)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.DropDownList("InventoryOwnershipID", String.Empty)<br />
            @Html.ValidationMessageFor(model => model.InventoryOwnershipID)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.WarrantyEnd)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.Telerik().DatePickerFor(model => model.WarrantyEnd).Name("WarrantyEnd")<br />
            @Html.ValidationMessageFor(model => model.WarrantyEnd)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.CorporateAccountServiceID)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.DropDownList("CorporateAccountServiceID", String.Empty)<br />
            @Html.ValidationMessageFor(model => model.CorporateAccountServiceID)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.PurchaseDate)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.Telerik().DatePickerFor(model => model.PurchaseDate).Name("PurchaseDate")<br />
            @Html.ValidationMessageFor(model => model.PurchaseDate)
        </td>
        </tr>
        <tr>
        <td style="vertical-align: middle; text-align: right;">
            @Html.LabelFor(model => model.ValidationStateID)
        </td>
        <td style="vertical-align: middle; text-align: left;">
            @Html.DropDownList("ValidationStateID", String.Empty)<br />
            @Html.ValidationMessageFor(model => model.ValidationStateID)
        </td>
        </tr>
        </tbody>
        </table>
    </fieldset>
    <div class="submit-row"> 
        <p class="deletelink-box">  @Html.ActionLink("Vazgeç ve Geri Dön", "Index")</p>
        <input type="submit" value="Kaydet" />
     </div>
    
}
</div>