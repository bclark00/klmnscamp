@model Klmsncamp.Models.Personnel
@{
    ViewBag.Title = "Personel Silme";
}
}
<div align="center" style="width: 650px; margin-left: auto; margin-right: auto; margin-top: 30px;
    border: 1px solid #eee;">
    <table>
        <tbody>
            <thead>
                <th>
                    Aşağıdaki Personel kaydını silmek istediğinize emin misiniz?
                </th>
            </thead>
            <tr>
                <td>
                    
                    <div class="display-label">
                        Adı-Soyadı</div>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.FullName)
                    </div>
                    <div class="display-label">
                        Departman</div>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.Location.Description)
                    </div>
                    <div class="display-label">
                        Kullanıcı Hesabı (varsa)</div>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.User.FullName)
                    </div>
                    <div class="display-label">
                        Durum</div>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.ValidationState.Description)
                    </div>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th>
                    @using (Html.BeginForm()) {
                        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Vazgeç ve Geri Dön", "Index")
        }
                </th>
            </tr>
        </tfoot>
    </table>