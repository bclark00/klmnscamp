                        <li><a href="/Inventory">Cihaz Bilgileri</a></li>
                        <li><a href="/CorporateType">Cari Kart Tipleri</a></li>
                        <li><a href="/CorporateAccount">Cari Kart Bilgileri</a></li>
                        <li><a href="/Account/Register">Yeni Kullanıcı Oluştur</a></li>
                    </ul>
                </li>
            }
            <li><a href="/">Hakkında</a></li>
            @if (ViewContext.Controller.ValueProvider.GetValue("controller").RawValue.ToString() == "RequestIssue" &&
        ViewContext.Controller.ValueProvider.GetValue("Action").RawValue.ToString() == "Index")
            {
                if (ViewBag.CurrentPage != null || ViewBag.CurrentShow != null)
                {
                <li><a href="#">|</a></li>
                <!--ViewBag.CurrentPage = page;
                ViewBag.PrevPageNumber = rlist.PageNumber - 1;
                ViewBag.NextPageNumber = rlist.PageNumber + 1;
                ViewBag.TotalPages = rlist.PageCount;
                ViewBag.HasPrevPage = rlist.HasNextPage;
                ViewBag.HasNextPage = rlist.HasNextPage;
                ViewBag.isFirstPage = rlist.IsFirstPage;
                ViewBag.isLastPage = rlist.IsLastPage;
                ViewBag.StartIndex = rlist.FirstItemOnPage;
                ViewBag.EndIndex = rlist.LastItemOnPage;
                 ViewBag.TotalItems -->
                    if (ViewBag.CurrentPage != null)
                    {
                        if (ViewBag.isFirstPage == false && ViewBag.HasPrevPage)
                        {
                <li style="background-color: #555555;"><a href="/RequestIssue/?show=@ViewBag.Currentshow&page=1">
                    &#060;&#060;&nbsp;En Yeni</a></li>
                        }
                        if (ViewBag.HasPrevPage)
                        {
                <li style="background-color: #555555;"><a href="/RequestIssue/?show=@ViewBag.Currentshow&page=@ViewBag.PrevPageNumber">
                    &#060;&nbsp;Daha Yeni</a></li>
                        }
                <li style="background-color: #555555;"><font style="text-decoration: none; color: #eee;
                    padding: .4em 1em; display: block; position: relative;">Toplam&nbsp;@ViewBag.TotalItems&nbsp;kayıttan
                    @ViewBag.StartIndex&nbsp;-&nbsp;@ViewBag.EndIndex arası</font></li>
                        if (ViewBag.HasNextPage)
                        {
                <li style="background-color: #555555;"><a href="/RequestIssue/?show=@ViewBag.Currentshow&page=@ViewBag.NextPageNumber">
                    Daha Eski&nbsp;&#062;</a></li>
                        }
                        if (ViewBag.isLastPage == false && ViewBag.HasNextPage)
                        {
                <li style="background-color: #555555;"><a href="/RequestIssue/?show=@ViewBag.Currentshow&page=@ViewBag.TotalPages">
                    En Eski&nbsp;&#062;&#062;</a></li>
                        }
                    }

                    if (ViewBag.CurrentShow != null)
                    {
                <li><a href="#">|</a></li>
                <li @if (ViewBag.CurrentShow == "W")
                    { <text>style="background-color: #FF0066;" </text>}>
                    <a href="/RequestIssue/?show=W&page=1">Bekleyenler</a></li>
                <li><a href="#">|</a></li>
                <li @if (ViewBag.CurrentShow == "P")
                    { <text>style="background-color: #FF0066;"</text> }>
                    <a href="/RequestIssue/?show=P&page=1">Sürenler</a></li>
                <li><a href="#">|</a></li>
                <li @if (ViewBag.CurrentShow == "C")
                    { <text>style="background-color: #FF0066;"</text> }>
                    <a href="/RequestIssue/?show=C&page=1">Tamamlananlar</a></li>
                <li><a href="#">|</a></li>
                <li @if (ViewBag.CurrentShow == "A")
                    { <text>style="background-color: #FF0066;"</text> }>
                    <a href="/RequestIssue/?show=A&page=1">Hepsi</a></li>
                    }

                }
            }
        </ul>
    </div>
    @RenderBody()
</body>
</html>