@model Klmsncamp.Models.SurveyNode

@{
    ViewBag.Title = "Anket Sorusu Tanımlama";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div align="center" style="width: 640px; margin-left: auto; margin-right: auto; margin-top: 30px;">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset class="module aligned ">
            <legend>Düzenle</legend>
            <br />
            <table style="width: 100%; margin-top: 15px;">
            @Html.HiddenFor(model => model.SurveyNodeID)
                <tbody>
                    <thead>
                        <tr>
                        <th colspan="2">Anket Cümlesi Düzenleme</th>
                        
                        </tr>
                         
                    </thead>
                    <tr>
                    <td style="vertical-align: middle; text-align: right;">
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        </td>
        <td style="vertical-align: middle; text-align: left;">
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Description, new { size = 50 })
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        </td>
        </tr>
        </tbody>
        </table>
        <br />
        <div class="submit-row">
            <p class="deletelink-box">
                @Html.ActionLink("Vazgeç ve Geri Dön", "Index")</p>
            <input type="submit" value="Kaydet" />
        </div>
    </fieldset>
}

</div>