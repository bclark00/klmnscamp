@using Telerik.Web.Mvc.UI
@model Klmsncamp.Models.User
@{
    ViewBag.Title = "Profil Düzenleme";
}
<div align="center" style="width: 640px; margin-left: auto; margin-right: auto; margin-top: 30px;">
<fieldset style="width: 820px;" class="module aligned ">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table style="width: 100%; margin-top: 15px;">
    <tbody>
    <tr>
    <td style="vertical-align: top; text-align: right; font-weight: bold;">Kullanıcının Rollerini Seçiniz</td>
    <td>@Html.ListBox("RoleID", null, new {style = "width: 250px;" })</td>
    </tr>
    <tr>
    <td style="vertical-align: top; text-align: right; font-weight: bold;">Yetkili Olduğu Ana birimleri Belirtiniz</td>
    
    <td>@Html.ListBox("WorkshopID", null, new {style = "width: 250px;" })</td>
    </tr>
    <tr>
    <td style="vertical-align: top; text-align: right; font-weight: bold;">Yetki Gruplarını Belirtiniz (Yetki Grubunun bağlı olduğu ana birim ve özel izinler, Kullanıcı izinlerine dahil edilir)</td>
    
    <td>@Html.ListBox("UserGroupID",null, new {style = "width: 250px;"})</td>
    </tr>
    <tr>
    <td style="vertical-align: top; text-align: right; font-weight: bold;">Özel izinleri seçiniz</td>
    
    <td>@Html.ListBox("CustomPermissionID",null,new {style = "width: 250px;"})</td>
    </tr>            
    </tbody>
    </table>
    <br />
    <div class="submit-row">
    <input type="submit" name="kaydet" value="Kaydet" />
    </div>
            
}
</fieldset>
</div>
