@using Telerik.Web.Mvc.UI
@model IEnumerable<Klmsncamp.Models.RequestIssue>
@{
    ViewBag.Title = "Arıza Bildirimleri";
}
@section script
{
    <script src="@Url.Content("~/Scripts/jquery.tooltip.js")" type="text/javascript"></script>
    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $("tbody tr").each(function () {

                var sTitle;
                var nTds = $("td", this);
                var sAck = $(nTds[10]).text();
                sTitle = sAck
                this.setAttribute('title', sTitle);

                if (sTitle.replace(" ", "") == "Tamamlananlar") {
                    this.setAttribute('title', 'Veri Süz');
                }
                else {
                    this.setAttribute('title', sTitle);
                }
            });

            /* Apply the tooltips */
            //var url = $(this).attr('href');

            $("tbody tr[title]").tooltip({
                "delay": 0,
                "track": true,
                "fade": 250
            });
        });

    </script>
    <style type="text/css">
        .t-grid .t-grid-header .t-header .t-link
        {
            height: auto;
        }

        .t-grid .t-grid-header .t-header, .t-grid .t-grid-header .t-last-header
        {
            white-space: normal;
        }

        #tooltip
        {
            position: absolute;
            display: none;
            border: 1px solid #333;
            background: #BDCDFF;
            padding: 5px 20px;
            color: #333;
            font-size: 9px;
            border-radius: 2px;
            -webkit-border-radius: 2px;
            -moz-border-radius: 2px;
        }
    </style>
}
<br />
<div align="center" style="width: 1410px; margin-left: auto; margin-right: auto;
    margin-top: 30px;">
    @(Html.Telerik().Grid(Model).Name("Inventory").HtmlAttributes(new { style = "width: 1400px; margin-left: auto; margin-right: auto;" })
                           .ToolBar(toolBar => toolBar.Template(
                                @<text>
    <table>
        <tbody>
            <tr>
                @if (ViewBag.CurrentPage != null || ViewBag.CurrentShow != null)
                {
                    if (ViewBag.CurrentPage != null || ViewBag.CurrentShow != null)
                    {
                        if (ViewBag.CurrentPage != null)
                        {
                            if (ViewBag.isFirstPage == false && ViewBag.HasPrevPage)
                            {
                    <td style="width: auto;">@Html.ActionLink("<< En Yeni", "Index", "RequestIssue", new { show = ViewBag.Currentshow, page = 1 }, null)
                    </td>
                            }
                            if (ViewBag.HasPrevPage)
                            {
                    <td style="width: auto;">@Html.ActionLink("< Daha Yeni", "Index", "RequestIssue", new { show = ViewBag.Currentshow, page = ViewBag.PrevPageNumber }, null)
                    </td>

                            }
                    <td style="width: auto;">
                        Toplam&nbsp;@ViewBag.TotalItems&nbsp;kayıttan&nbsp;@ViewBag.StartIndex&nbsp;-&nbsp;@ViewBag.EndIndex&nbsp;arası
                    </td>
                            if (ViewBag.HasNextPage)
                            {
                    <td style="width: auto;">@Html.ActionLink("Daha Eski >", "Index", "RequestIssue", new { show = ViewBag.Currentshow, page = ViewBag.NextPageNumber }, null)
                    </td>
                            }
                            if (ViewBag.isLastPage == false && ViewBag.HasNextPage)
                            {
                    <td style="width: auto;">@Html.ActionLink("En Eski >>", "Index", "RequestIssue", new { show = ViewBag.Currentshow, page = ViewBag.TotalPages }, null)
                    </td>

                            }
                            if (ViewBag.HasPrevPage || ViewBag.HasNextPage)
                            {
                    <td style="width: auto;">@Html.ActionLink("Tek Sayfa", "Index", "RequestIssue", new { show = ViewBag.Currentshow, page = -1 }, null)
                    </td>

                            }
                        }
                    }

                    <td @if (ViewBag.CurrentResp == "Y")
                        { <text>style="background-color: #CCFF99;" </text>}>@Html.ActionLink("İşlerim", "Index", "RequestIssue", new { show = "A", page = -1, resp = "Y" }, null)
                    </td>

                        if (ViewBag.CurrentShow != null)
                        {

                    <td @if (ViewBag.CurrentShow == "W")
                        { <text>style="background-color: #CCCCFF;" </text>}>@Html.ActionLink("Taslaklarım", "Index", "RequestIssue", new { show = "W", page = 1 }, null)
                    </td>

                    <td @if (ViewBag.CurrentShow == "P")
                        { <text>style="background-color: #CCCCFF;"</text> }>@Html.ActionLink("Devam Edenler", "Index", "RequestIssue", new { show = "P", page = 1 }, null)
                    </td>

                    <td @if (ViewBag.CurrentShow == "C")
                        { <text>style="background-color: #CCCCFF;"</text> }>@Html.ActionLink("Tamamlananlar", "Index", "RequestIssue", new { show = "C", page = 1 }, null)
                    </td>

                    <td @if (ViewBag.CurrentShow == "A")
                        { <text>style="background-color: #CCCCFF;"</text> }>@Html.ActionLink("Tüm İşler", "Index", "RequestIssue", new { show = "A", page = 1 }, null)
                    </td>
                        }
                }
                <td>
                </td>
                <td>@Html.ActionLink("Excele Aktar", "ExportXls", "RequestIssue", new { page = ViewBag.Currentpage, orderBy = "~", filter = ViewBag.CurrentShow }, null)
                </td>
            </tr>
        </tbody>
    </table>
    </text>))

                            .Columns(columns =>
                            {
                                @columns.Template(
                                    @<text>
    @Html.ActionLink("Düzenle", "Edit", "RequestIssue", new { id = @item.RequestIssueID, show = @ViewBag.CurrentShow, page = @ViewBag.CurrentPage }, null)&nbsp;|&nbsp;
    @Html.ActionLink("Sil", "Delete", "RequestIssue", new { id = @item.RequestIssueID, show = @ViewBag.CurrentShow, page = @ViewBag.CurrentPage }, null)
    </text>
                                ).Width(100);
                                columns.Bound(o => o.Workshop.Description).Width(100).Title("Yeni İşletme Birimi");
                                columns.Bound(o => o.StartDate).Width(120).Title("Baş.Tarihi").Format("{0:d}");
                                columns.Bound(o => o.UserReq.FullName).Width(120).Title("Kaydı Açan");
                                columns.Bound(o => o.Location.CapitalizedDescription).Width(120).Title("Departman");
                                columns.Bound(o => o.Personnel.FullName).Width(140).Title("İş İsteyen");
                                columns.Bound(o => o.RequestState.CapitalizedDescription).Width(120).Title("Durumu");
                                columns.Bound(o => o.CapitalizedNote).Width(350).Title("Sonuç Notu").Filterable(false).Groupable(false).Sortable(false);
                                columns.Bound(o => o.User.FullName).Width(140).Title("İlgili Kullanıcı");
                                @columns.Template(
                                        @<text>
    @if (item.IsApproved == false || item.IsApproved == null)
    {
        <img alt="onaysiz" src="@Url.Content("~/Content/images/delete.png")" />
    }
    else if (item.IsApproved && item.RequestStateID == ViewBag.CompletedStateID)
    {
        <img alt="onayli" src="@Url.Content("~/Content/images/checked.gif")" />
    }
    else if (item.IsApproved && item.RequestStateID == ViewBag.InCompletedStateID)
    {
        <img alt="olumsuz" src="@Url.Content("~/Content/images/exclamation.gif")" />
    }
    </text>
                                    ).Title("Durum");
                                columns.Bound(o => o.DetailedDescription).Hidden();
                                //columns.Bound(o => o.IsApproved).Hidden();
                                //columns.Bound(o => o.ValidationStateID).Hidden();

                            }
                                                                                                                                                                        )
                                                                                                                                                                        .RowAction(row =>
                                                                                                                                                                        {
                                                                                                                                                                            if (row.DataItem.IsApproved == true && row.DataItem.RequestStateID == ViewBag.CompletedStateID)
                                                                                                                                                                            {
                                                                                                                                                                                row.HtmlAttributes["style"] = "background: #99FF99;";
                                                                                                                                                                            }
                                                                                                                                                                            else if (row.DataItem.IsApproved == true && row.DataItem.RequestStateID == ViewBag.InCompletedStateID)
                                                                                                                                                                            {
                                                                                                                                                                                row.HtmlAttributes["style"] = "background: #FFCCCC;";
                                                                                                                                                                            }
                                                                                                                                                                            else if (row.DataItem.ValidationStateID == 2)
                                                                                                                                                                            {
                                                                                                                                                                                row.HtmlAttributes["style"] = "background: #FFFF00;";
                                                                                                                                                                            }

                                                                                                                                                                        })
                            .Scrollable(scrolling => scrolling.Enabled(true).Height(500))
                                                                                .Sortable(sorting => sorting.Enabled(true))
                            .Filterable(filtering => filtering.Enabled(true))
                            .Groupable(grouping => grouping.Enabled(true))
                            .Resizable(resizing => resizing.Columns(true))
                            .Footer(true)
                            .Localizable("tr-TR")
                            )
</div>