@using Telerik.Web.Mvc.UI
@model Klmsncamp.Models.RequestIssue
@{
    ViewBag.Title = "Raporlama";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div align="center" style="width: 640px; margin-left: auto; margin-right: auto; margin-top: 30px;">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div style="width: 660px; margin-left: auto; margin-right: auto; margin-top: 30px;">
            <fieldset class="module aligned ">
                <br />
                <h2>
                    Raporlama Kriterleri Belirtiniz</h2>
                <table width="100%">
                    <tbody>
                        <tr>
                            <td colspan="2">
                                <p class="help">
                                    İş isteklerinizi raporlamak için aşağıdaki kutucukları kullanabilirsiniz</p>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="text-align: center;">
                                <label>
                                    Ana Departman&nbsp;:&nbsp;</label>
                                @Html.DropDownList("LocationGroupID", String.Empty)<br />
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right;">
                                <label>
                                    İş Sahibi&nbsp;:&nbsp;</label>
                                @Html.DropDownList("UserID", String.Empty)<br />
                            </td>
                            <td style="text-align: left;">
                                <label>
                                    Departman&nbsp;:&nbsp;</label>
                                @Html.DropDownList("LocationID", String.Empty)<br />
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right;">
                                <label>
                                    İş Durumu&nbsp;:&nbsp;</label>
                                @Html.DropDownList("RequestStateID", String.Empty)<br />
                            </td>
                            <td style="text-align: left;">
                                <label>
                                    Onay Durumu&nbsp;:&nbsp;
                                </label>
                                @Html.DropDownList("IsApproved", String.Empty)<br />
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right;">
                                <label>
                                    İş İsteyen&nbsp;:&nbsp;</label>@Html.DropDownList("PersonnelID", String.Empty)
                            </td>
                            <td style="text-align: left;">
                                <label>
                                    İş Tipi&nbsp;:&nbsp;</label>@Html.DropDownList("RequestTypeID", String.Empty)
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right;" width="50%">
                                <label class="datetime">
                                    Baş. Tarihi&nbsp;:&nbsp;</label>
                                @Html.Telerik().DatePickerFor(model => model.StartDate).Name("StartDate")
                            </td>
                            <td style="text-align: left;" width="50%">
                                <label class="datetime">
                                    Bitiş Tarihi&nbsp;:&nbsp;</label>
                                @Html.Telerik().DatePickerFor(model => model.EndDate).Name("EndDate")
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="submit-row">
                    <p class="deletelink-box">
                        @Html.ActionLink("Vazgeç ve Geri Dön", "Index")
                    </p>
                    <input type="submit" name="workload" value="İş Yükü Raporu" />
                    <input class="default" name="worklist" type="submit" value="İş Listesi" />
                </div>
            </fieldset>
            <br />
            <fieldset class="module aligned ">
                <br />
                <h2>
                    Bilinmesi Gerekenler</h2>
                <div style="margin: 5px;">
                    <ul style="list-style: none">
                        <li>Dilediğiniz kriter(ler)i boş bırakabilirsiniz</li>
                        <li>Raporları görüntüleyebilmeniz için bilgisayarınızda <a href="http://get.adobe.com/reader/">
                            Adobe Reader</a> kurulu olması gerekmektedir. Kurmak için <a href="http://get.adobe.com/reader/">
                                tıkla</a></li>
                    </ul>
                </div>
            </fieldset>
        </div>
    }
</div>