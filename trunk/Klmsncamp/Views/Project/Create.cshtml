                        </div>-->
                </tbody>
            </table>
        </fieldset>
        <div style="width: 820px;" class="submit-row">
            <p class="deletelink-box">
                @Html.ActionLink("Vazgeç ve Geri Dön", "Index")</p>
            <input type="submit" value="Kaydet" />
        </div>
    }
