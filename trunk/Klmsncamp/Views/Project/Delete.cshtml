@model Klmsncamp.Models.Project
@{
    ViewBag.Title = "Proje Kaydını Silme";
}
<div align="center" style="width: 750px; margin-left: auto; margin-right: auto; margin-top: 30px;
    border: 1px solid #eee;">
    <table style="width: 100%;">
        <tbody>
            <thead>
                <th colspan="2">
                &nbsp;
                <br />
                    Aşağıdaki Proje kaydını silmek istediğinize emin misiniz?<br />
                    &nbsp;
                </th>
            </thead>
            <tr>
            <td style="vertical-align: middle; text-align: center;" colspan="2">
            <p class="help">Projenize bağlı olan İş/Arıza bildirimleriniz silinmeyecek ancak bu proje ile ilgili
                    olan bağlantılar kopacaktır. Eğer işlerinizi başka bir projeye taşımak isterseniz
                    @Html.ActionLink("Proje Taşıma Formunu", "Transfer") kullanınız.</p>
            </td>
            </tr>
            <tr>
                <td style="vertical-align: middle; text-align: right; font-weight: bold;">
                    @Html.LabelFor(model => model.Description)
                </td>
                <td style="vertical-align: middle; text-align: left;">
                    @Html.DisplayFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <td style="vertical-align: middle; text-align: right; font-weight: bold;">
                     @Html.LabelFor(model => model.StartDate)
                </td>
                <td style="vertical-align: middle; text-align: left;">
                    @Html.DisplayFor(model => model.StartDate)
                </td>
            </tr>
            <tr>
                <td style="vertical-align: middle; text-align: right; font-weight: bold;">
                    @Html.LabelFor(model => model.EndDate)
                </td>
                <td style="vertical-align: middle; text-align: left;">
                    @Html.DisplayFor(model => model.EndDate)
                </td>
            </tr>
            <tr>
                <td style="vertical-align: middle; text-align: right; font-weight: bold;">
                    @Html.LabelFor(model => model.RequestState)
                </td>
                <td style="vertical-align: middle; text-align: left;">
                    @Html.DisplayFor(model => model.RequestState.Description)
                </td>
                <tr>
                    <td style="vertical-align: middle; text-align: right; font-weight: bold;">
                        @Html.LabelFor(model => model.User)
                    </td>
                    <td style="vertical-align: middle; text-align: left;">
                        @Html.DisplayFor(model => model.User.FullName)
                    </td>
                </tr>
                <tr>
                    <td style="vertical-align: middle; text-align: right; font-weight: bold;">
                        @Html.LabelFor(model => model.cUser)
                    </td>
                    <td style="vertical-align: middle; text-align: left;">
                        @Html.DisplayFor(model => model.cUser.FullName)
                    </td>
                </tr>
                <tr>
                    <td style="vertical-align: middle; text-align: right; font-weight: bold;">
                         @Html.LabelFor(model => model.TimeStamp)
                    </td>
                    <td style="vertical-align: middle; text-align: left;">
                        @Html.DisplayFor(model => model.TimeStamp)
                    </td>
                </tr>
                <tfoot>
                    <td colspan="2">
                        @using (Html.BeginForm()) {
                        <p style="text-align: center;">
                            <input type="submit" value="Sil" />
                            |
                            @Html.ActionLink("Vazgeç ve Geri Dön", "Index")
                        </p>
                        }
                    </td>
                </tfoot>
        </tbody>
    </table>
</div>