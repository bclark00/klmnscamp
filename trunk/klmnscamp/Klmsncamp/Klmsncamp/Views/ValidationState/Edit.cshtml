@model Klmsncamp.Models.ValidationState

@{
    ViewBag.Title = "Geçerlilik Bilgileri Düzenleme";
}
@section script
{

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}


<div align="center" style="width:640px; margin-left: auto; margin-right: auto; margin-top:30px;">

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
   <fieldset class="module aligned ">
   <legend>Düzenle</legend>
    <table style="width: 100%; margin-top:15px;">
    <tbody>
    <thead>
    <th colspan="2">Geçerlilik Bilgileri Düzenleme</th>
    </thead>

        @Html.HiddenFor(model => model.ValidationStateID)
    <tr>       
    <td style="vertical-align: middle;">
            @Html.LabelFor(model => model.Description)
     </td>
    <td style="vertical-align: middle;">
            @Html.TextBoxFor(model => model.Description, new { size = 50 })
            @Html.ValidationMessageFor(model => model.Description)
     </td>
    </tr>
    </tbody>
    </table>
       
    </fieldset>
    <div class="submit-row">     
        <p class="deletelink-box"><a href="/ValidationState">Vazgeç ve geri dön</a></p>
         <input type="submit" value="Kaydet" name="_save"/>
   
    </div>
}