@model IEnumerable<Klmsncamp.Models.CorporateType>

@{
    ViewBag.Title = "Cari Kart Tipleri";
}

<div align="center" style="width:640px; margin-left: auto; margin-right: auto; margin-top:30px;">
   <fieldset class="module aligned ">
    <table style="width: 100%;">
    <tbody>
    <thead>
        <th>Cari Tip Bilgileri</th>
        <th></th>
    </thead>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.CorporateTypeID })&nbsp;|&nbsp;@Html.ActionLink("Sil", "Delete", new { id = item.CorporateTypeID })
            </td>
        </tr>
        }
    </tbody>       
    </table>
    </fieldset>
    <div class="submit-row">
     <p class="deletelink-box">@Html.ActionLink("Yeni Cari Tip Ekle", "Create")</p></div>
